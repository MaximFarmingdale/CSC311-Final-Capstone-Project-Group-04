<AnchorPane fx:id="MainMenuAPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csc311finalcapstoneprojectgroup04.JavaFXControllers.MainMenuScreenController">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #00bfff;">
         <bottom>
            <HBox alignment="CENTER" maxHeight="225.0" minHeight="175.0" prefWidth="1280.0" style="-fx-background-color: #3d8c40;" BorderPane.alignment="CENTER">
