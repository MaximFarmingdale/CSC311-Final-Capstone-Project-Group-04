            </HBox>
         </bottom>
         <top>
            <Text fill="WHITE" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" text="TypeRacer Demo" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="MS Outlook" size="86.0" />
               </font>
               <BorderPane.margin>
                  <Insets top="75.0" />
               </BorderPane.margin>
            </Text>
         </top>
      </BorderPane>
   </children>
