                     </HBox.margin>
                     <font>
                        <Font name="Malgun Gothic Bold" size="32.0" />
                     </font>
                  </Button>
                  <Button fx:id="optionsButton" minHeight="100.0" minWidth="200.0" mnemonicParsing="false" onAction="#optionPullUp" style="-fx-background-color: #4caf50;" text="OPTION" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Malgun Gothic Bold" size="32.0" />
                     </font>
                  </Button>
                  <Button fx:id="exitButton" minHeight="100.0" minWidth="200.0" mnemonicParsing="false" onAction="#exitProgram" style="-fx-background-color: #4caf50;" text="EXIT" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
